# CortexBuild Pro Environment Configuration
# Copy this to .env and fill in your values

# --- Frontend Configuration (VITE_) ---
VITE_APP_NAME=CortexBuild Pro
VITE_APP_VERSION=1.1.0
NODE_ENV=development

# API & WebSocket
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000/api/live

# Supabase Public (Client)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# AI / External
VITE_GEMINI_API_KEY=your-gemini-api-key

# Notifications (Optional)
VITE_FROM_EMAIL=noreply@cortexbuildpro.com
VITE_FROM_NAME=CortexBuild Pro

# --- Backend Configuration (Server) ---
PORT=8080
JWT_SECRET=your-jwt-secret
DATABASE_URL=your-database-url (if using external)

# Supabase Private (Admin)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security & Push
# CORS Origins: In production, only production origins are allowed by default.
# In development, both production and local development origins are allowed.
# Override with comma-separated list if custom domains are needed.
# Example: CORS_ORIGIN=https://custom-domain.com,https://another-domain.com
CORS_ORIGIN=http://localhost:5173,https://cortexbuildpro.com
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
FILE_SIGNING_SECRET=your-signing-secret

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
EMAIL_FROM=noreply@cortexbuildpro.com
APP_URL=https://cortexbuildpro.com

# Flags
ENABLE_DEMO_AUTH=false
MAINTENANCE_MODE=false
